{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "src/types.d.ts", ".next/types/**/*.ts", "src/blocks/Components/Lanyard/Lanyard.js", "src/Components/HorizontalSlides/HorizontalSlides.js", "src/app/page.js", "src/app/lenis-layout.js", "src/Components/Card/BouncingCardWithText.jsx", "src/Components/Animation/Tumbling3DText.js", "src/app/students/page.tsx"],
  "exclude": ["node_modules"]
}
